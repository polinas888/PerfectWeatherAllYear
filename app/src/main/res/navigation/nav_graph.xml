<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/locationFragment">

    <fragment
        android:id="@+id/locationFragment"
        android:name="com.example.perfectweatherallyear.ui.location.LocationFragment"
        android:label="LocationFragment" >
        <action
            android:id="@+id/action_locationFragment_to_weatherForecastFragment"
            app:destination="@id/weatherForecastFragment" />
    </fragment>
    <fragment
        android:id="@+id/weatherForecastFragment"
        android:name="com.example.perfectweatherallyear.ui.weekWeather.WeatherForecastFragment"
        android:label="WeatherForecastFragment" >
        <action
            android:id="@+id/action_weatherForecastFragment_to_detailWeatherFragment"
            app:destination="@id/detailWeatherFragment" />
        <argument
            android:name="location"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/detailWeatherFragment"
        android:name="com.example.perfectweatherallyear.ui.detailWeather.DetailWeatherFragment"
        android:label="DetailWeatherFragment" >
        <argument
            android:name="dayWeather"
            app:argType="string" />
    </fragment>
</navigation>