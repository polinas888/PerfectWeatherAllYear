<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PerfectWeatherAllYear" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2E46CA</item>
        <item name="colorPrimaryVariant">#031991</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DetailWeatherPropertiesTextView" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">200dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline2</item>
    </style>

    <style name="DetailWeatherPropertiesValueTextView" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MaterialComponents.Headline2</item>
    </style>

    <style name="CardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="contentPaddingBottom">16dp</item>
        <item name="contentPaddingTop">16dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
    </style>
</resources>