<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="dayWeather"
            type="com.example.perfectweatherallyear.model.DayWeather" />

        <variable
            name="weekDay"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/itemWeatherMarginBottomLayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dayOfWeekTextView"
            android:layout_width="@dimen/day_of_week_textView"
            android:layout_height="wrap_content"
            android:text="@{weekDay}"
            tools:text="@string/dayOfWeekTest" />

        <TextView
            android:id="@+id/maxTempretureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(dayWeather.max_temperature)}"
            tools:text="@string/temperatureTest" />

        <TextView
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sepereter_temp"
            tools:text="/" />

        <TextView
            android:id="@+id/minTemperatureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(dayWeather.min_temperature)}"
            tools:text="@string/temperatureTest" />
    </LinearLayout>
</layout>